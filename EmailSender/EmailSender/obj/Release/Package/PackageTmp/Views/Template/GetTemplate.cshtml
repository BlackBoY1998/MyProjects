            function loadData() {
                $.ajax({
                    async: true,
                    url: '/Template/show',
                    type: 'Get',
                    contentType: 'application/json;charset=utf-8',
                    dataType: 'JSON',
                    success: function (response) {
                        $.each(response, function (key, value) {
