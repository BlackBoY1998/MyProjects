                dataType: "json",
                success: function (result) {
                    $('#lblId').val(result.Id),
                    $('#lblName').val(result.Name),
                    $('#lblUserName').val(result.UserName),
                    $('#lblpassword').val(result.Password),
                    $('#lblGender').val(result.Gender),
                    $('#lblDOB').val(new Date(parseInt((result.DOB).replace("/Date(", "").replace(")/")))),
                    $('#lblEmailId').val(result.EmailId),
