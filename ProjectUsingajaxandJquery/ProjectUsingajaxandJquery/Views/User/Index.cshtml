        function validate() {
            var Isvalid = true;
            if ($('#InputName').val().length == "") {
                $('#InputName').css('border-color', 'Red');
                $('#Namecheck').show();
                Isvalid = false;


            }
            else {
                $('#InputName').css('border-color', 'lightgrey');
                $('#Namecheck').hide();

            }


            if ($('#InputUsername').val().length == "") {
                $('#InputUsername').css('border-color', 'Red');
                $('#UserNamecheck').show();
                Isvalid = false;
            }
            else if (($('#InputUsername').val().length < 5) || ($('#InputUsername').val().length > 10)) {
                $('#InputUsername').css('border-color', 'Red');
                $('#UserNamecheck').html('**Please Enter UserName Between 5 to 10 Characters');
                $('#UserNamecheck').show();
                Isvalid = false;
            }
            else {
                $('#InputUsername').css('border-color', 'lightgrey');
                $('#UserNamecheck').hide();
            }


            var PwdReg = /(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*?[#?!@@$%^&*-]).{8,10}/;
            if ($('#InputPassword').val().length == "") {
                $('#InputPassword').css('border-color', 'Red');
                $('#PasswordCheck').show();
                Isvalid = false;
            }
            else if (($('#InputPassword').val().length < 8) || ($('#InputPassword').val().length > 10)) {
                $('#InputPassword').css('border-color', 'Red');
                $('#PasswordCheck').html('**Please Enter Password Between 8 to 10 Characters');
                $('#PasswordCheck').show();
                Isvalid = false;
            }
            else if (!PwdReg.test($('#InputPassword').val())) {
                $('#InputPassword').css('border-color', 'Red');
                $('#PasswordCheck').html('**Please Enter valid Password');
                $('#PasswordCheck').show();
                Isvalid = false;
            }
            else {
                $('#InputPassword').css('border-color', 'lightgrey');
                $('#PasswordCheck').hide();
            }


            if ($('#InputDOB').val().length == "") {
                $('#InputDOB').css('border-color', 'Red');
                $('#DOBcheck').show();
                Isvalid = false;
            }
            else {
                $('#InputDOB').css('border-color', 'lightgrey');
                $('#DOBcheck').hide();
            }

            var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
            if ($('#InputEmailId').val().length == "") {
                $('#InputEmailId').css('border-color', 'Red');
                $('#EmailIDcheck').show();
            }
            else if (!emailReg.test($('#InputEmailId').val())) {
                $('#InputEmailId').css('border-color', 'Red');
                $('#EmailIDcheck').html('**Please Enter valid Email Address');
                $('#EmailIDcheck').show();
                Isvalid = false;
            }
            else {
                $('#InputEmailId').css('border-color', 'lightgrey');
                $('#EmailIDcheck').hide();
            }


            if ($('#InputMobile').val().length == "") {
                $('#InputMobile').css('border-color', 'Red');
                $('#Mobilecheck').show();
                Isvalid = false;
            }
            else if (($('#InputMobile').val().length < 10) || ($('#InputMobile').val().length > 12)) {
