@{
    ViewBag.Title = "Pie";
}

<html>
<head>
    <title>Pie</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>



</head>
<body>
    <div style="width:500px; margin:0 auto;">
        <canvas id="pieChart"></canvas>
    </div>
    <script>
        $(document).ready(function () {
            $.getJSON("/DisplayAjax/PieData", function (data) {

                var ctxP = document.getElementById("pieChart").getContext('2d');
                var myPieChart = new Chart(ctxP, {
                    type: 'pie',
                    data: {
                        labels: ["London", "Seattle", "Tacoma", "Kirkland", "Redmond"],
                        datasets: [{
                            data: [data.London, data.Seattle, data.Tacoma, data.Kirkland, data.Redmond],
                            backgroundColor: ["#F7464A", "#46BFBD", "#FDB45C", "#949FB1", "#4D5360"],
                            hoverBackgroundColor: ["#FF5A5E", "#5AD3D1", "#FFC870", "#A8B3C5", "#616774"]
                        }]
                    },
                    options: {
                        responsive: true
                    }
                });
            });
        });
    </script>
</body>
</html>


