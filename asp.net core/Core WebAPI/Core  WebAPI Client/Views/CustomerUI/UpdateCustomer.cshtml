@model Core__WebAPI_Client.Models.Customer

@{
    ViewData["Title"] = "UpdateCustomer";
}

<h2>Update a Reservation <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="CustomerID"></label>
        <input class="form-control" asp-for="CustomerID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input class="form-control" asp-for="CustomerName" />
    </div>
    <div class="form-group">
        <label asp-for="CustomerLocation"></label>
        <input class="form-control" asp-for="CustomerLocation" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
