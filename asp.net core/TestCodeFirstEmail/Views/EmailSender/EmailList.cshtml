@model IEnumerable<Email>
@{
    ViewData["Title"] = "EmailList";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Email List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmailSender" asp-action="AddEmail" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Create New EmailSender</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Server Name
            </th>
            <th>
                From Address
            </th>
            <th>
                From DisplayName
            </th>
            <th>
                IsActive
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.server</td>
                <td>@obj.FromAddress</td>
                <td>@obj.FromDisplayName</td>
                <td>@obj.Active</td>
            </tr>
        }

    </tbody>
</table>
